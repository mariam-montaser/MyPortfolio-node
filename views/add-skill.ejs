<%- include('./partials/header.ejs')%>
<%- include('./partials/navbar.ejs')%>

<div class="card mt-5 mx-auto" style="width: 60%;">
    <h3 class="mt-3 text-center">Add Project</h3>
    <div class="card-body">
        <form method="POST">
            <div class="form-group">
                <label for="skill">Skill: </label>
                <input type="text" class="form-control" id="skill" name="skillName" required>
            </div>
            <div class="form-group">
                <label for="category">Skill Category: </label>
                <select class="form-control" id="category" name="category" required>
                    <option disabled selected></option>
                    <option value="backend">Backend</option>
                    <option value="frontend">Frontend</option>
                    <option value="additional">Additional Skills</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary text-center form-control">Save</button>
        </form>
    </div>
</div>

