<%- include('./partials/header.ejs')%>
<%- include('./partials/navbar.ejs')%>

<div class="container">
    <h1 class="text-center my-3">My Skills</h1>
    <a class="btn btn-warning mb-2" href="/skills/add">+Add New Skill</a>
    <% if(skills.length > 0) {%>
    <table class="table table-hover table-responsive d-block mx-auto mt-3">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category</th>
                <th scope="col">Skill</th>
                <th scope="col">Controls</th>
            </tr>
        </thead>
        <tbody>
            <% skills.forEach((skill, index) => {%>
            <tr>
                <th scope="row"><%= index+1%></th>
                <td><%= skill.category %></td>
                <td><%= skill.skillName %></td>
                <td>
                    <form class="d-inline-block" action="/skills/delete/<%= skill._id %>?_method=DELETE"
                        method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            <% })%>
        </tbody>
    </table>
    <% } else { %>
    <p class="text-center alert alert-success">No Skills Yet.</p>
    <% } %>
</div>


<%- include('./partials/footer.ejs')%>